<Window x:Class="AtmApplication_shweta.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtmApplication_shweta"
        mc:Ignorable="d"
        Title="Input Dialog" Height="500" Width="800" WindowStartupLocation="CenterOwner" WindowStyle="None" AllowsTransparency="True" Background="#D3D3D3" BorderBrush="#444444" BorderThickness="1">



    <Grid>
      
                <Border Background="gray" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding Prompt}" Margin="0,0,0,10" FontSize="16" FontWeight="Bold"/>
                        <TextBox x:Name="txtInput" Margin="0,0,0,10" Padding="5" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="OK" Style="{StaticResource ButtonStyle}" Click="OK_Click"/>
                            <Button Content="Cancel" Style="{StaticResource ButtonStyle}" Click="Cancel_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Window>
